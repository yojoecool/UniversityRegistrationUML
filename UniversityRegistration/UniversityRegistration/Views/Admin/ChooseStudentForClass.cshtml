@model IEnumerable<UniversityRegistration.Models.StudentInfo>

@{
    ViewBag.Title = "ChooseStudentForClass";
}

<h2>ChooseStudentForClass</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.majorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.majorName)
        </td>
        <td>
            @Html.ActionLink("Add", "AddStudentToClass", new { studentId=item.Id, classId=ViewBag.Class })
        </td>
    </tr>
}

</table>
