@model IEnumerable<UniversityRegistration.Models.Building>

@{
    ViewBag.Title = "Choose Building";
}

<h2>Choose Building</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Add", "AddRoom", new { id=item.Id })
        </td>
    </tr>
}

</table>
