@model IEnumerable<UniversityRegistration.Models.Building>

@{
    ViewBag.Title = "Choose Building For Class";
}

<h2>Choose Building For Class</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Choose Room", "ChooseRoomForClass", new { buildingId=item.Id, classId=(int)ViewBag.Class })
        </td>
    </tr>
}

</table>
